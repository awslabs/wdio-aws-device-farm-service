{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "strictFunctionTypes": false,
    "lib": ["dom", "ES2021"],
    "outDir": "dist/",
    "module": "ES6",
    "types": ["vitest/globals"]
  },
  "include": ["src/"]
}
